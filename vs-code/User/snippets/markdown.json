{
	"Checkbox":{
		"prefix": "check",
		"body": [
			"<input type=checkbox><label>$1</label></br>\n"
		],
		"description": "Checkbox",
	},
	"underline":{
		"prefix": ["ul",],
		"body": [
			"<u>$1</u>"
		],
		"description": "Surround text with underline",
	},
	"TODO item":{
		"prefix": ["task",],
		"body": [
			"- [ ] ${1: Describe your TODO item}"
		],
		"description": "Text to be show in Intellisense",
	},
	"Markdown link":{
		"prefix": ["link",],
		"body": [
			"[${1:alt-link-text}](${2:actual-link})"
		],
		"description": "Create markdown link",
	},

	// mermaid
	"mermaid block":{
		"prefix": ["mermaid",],
		"body": [
			"```mermaid",
			"${1:trigger examples with `examples`}",
			"```",
		],
		"description": "mermaid code block",
	},

}