#!/usr/bin/env zsh

# This script is a copied from @theprimeagen's repo
# https://github.com/ThePrimeagen/.dotfiles/tree/master/bin/.local/scripts/tmux-sessionizer

folders=(
	$(find ~/git-repos/usr -maxdepth 1 -type d)
)

# b'se in office its in Onedrive & in my Mac at different place
folders+=($ZK_NOTEBOOK_DIR)

if [ -d ~/dev/AI_Core_Services/ ]; then
  folders+=(~/dev/AI_Core_Services)
fi

if [ -d ~/stow-configs/ ]; then
	folders+=(~/stow-configs)
fi

if [ -d ~/git-repos/my-lazyvim/ ]; then
  folders+=(~/git-repos/my-lazyvim/)
fi

if [ -d $HOME ]; then
  folders+=($HOME)
fi

if [ -d ~/git-repos/my-nvim/ ]; then
  folders+=(~/git-repos/my-nvim/)
fi

if [[ $# -eq 1 ]]; then
	selected=$1
else
	# selected=$(find ~/stow-configs/ ~/git-repos/ ~/git-repos/usr/ -mindepth 1 -maxdepth 1 -type d | fzf-tmux -p --reverse)
	selected=$(printf "%s\n" "${folders[@]}" | fzf-tmux -p --reverse)
fi
if [[ -z $selected ]]; then
	exit 0
fi

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
	tmux new-session -s $selected_name -c $selected
	exit 0
fi

if ! tmux has-session -t=$selected_name 2>/dev/null; then
	tmux new-session -ds $selected_name -c $selected
fi

tmux switch-client -t $selected_name
